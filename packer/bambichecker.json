{
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "../ansible/bambichecker.yml",
            "host_alias": "packer-checker",
            "extra_arguments": [
                "--extra-vars",
                "ansible_python_interpreter=/usr/bin/python3"
            ]
        }
    ],
    "builders": [
        {
            "type": "hcloud",
            "image": "ubuntu-22.04",
            "location": "fsn1",
            "server_type": "cx11",
            "ssh_username": "root",
            "snapshot_name": "bambichecker-{{timestamp}}",
            "snapshot_labels": {
                "type": "bambichecker"
            }
        }
    ]
}
