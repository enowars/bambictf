{
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "../ansible/bambielk.yml",
            "host_alias": "packer-elk",
            "ansible_env_vars": [
                "ANSIBLE_PIPELINING=True"
            ],
            "extra_arguments": [ "--scp-extra-args", "'-O'" ]
        }
    ],
    "builders": [
        {
            "type": "hcloud",
            "image": "ubuntu-22.04",
            "location": "fsn1",
            "server_type": "cx22",
            "ssh_username": "root",
            "snapshot_name": "bambielk-{{timestamp}}",
            "snapshot_labels": {
                "type": "bambielk"
            },
            "temporary_key_pair_type": "ecdsa"
        }
    ]
}