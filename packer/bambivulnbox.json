{
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "../ansible/bambivulnbox.yml",
            "host_alias": "packer-vulnbox",
            "ansible_env_vars": [
                "ANSIBLE_PIPELINING=True"
            ],
            "extra_arguments": [ "--scp-extra-args", "'-O'" ]
        }
    ],
    "builders": [
        {
            "type": "hcloud",
            "image": "ubuntu-24.04",
            "location": "fsn1",
            "server_type": "cx32",
            "ssh_username": "root",
            "snapshot_name": "bambivulnbox-{{timestamp}}",
            "snapshot_labels": {
                "type": "bambivulnbox"
            },
            "temporary_key_pair_type": "ecdsa"
        }
    ]
}
